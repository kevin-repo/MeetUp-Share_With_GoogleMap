<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/walpaper">

    <CheckBox
        android:id="@+id/friend_list_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    
    <TextView
        android:id="@+id/id_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:visibility="gone"
        android:text="Id" />
    
    <TextView
        android:id="@+id/firstname_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_alignBaseline="@+id/friend_list_checkBox"
        android:layout_alignBottom="@+id/friend_list_checkBox"
        android:layout_toRightOf="@+id/friend_list_checkBox"
        android:text="First name" 
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/lastname_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Last name"
        android:textColor="#FFFFFF"  />

</LinearLayout>