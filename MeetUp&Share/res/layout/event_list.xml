<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/event_list_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id"
            android:visibility="gone" />

        <TextView
            android:id="@+id/url_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url"
            android:visibility="gone"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/titre_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >
            
            <ImageView
                android:id="@+id/date_event_list_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar"
                android:layout_marginRight="5dp" />
            
            <TextView
                android:id="@+id/date_event_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Date"
                android:textColor="#FFFFFF"  />

            <TextView
                android:id="@+id/heure_event_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Heure" 
                android:visibility = "gone"
                android:textColor="#FFFFFF" />         
            
            <ImageView
                android:id="@+id/place_event_list_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_action_place" />
            
             <TextView
                 android:id="@+id/place_event_list"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Place"
                 android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>